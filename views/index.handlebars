<div class="container">
  <div class="row justify-content-center">
    <h1 class="header">Welcome to the burger shop</h1>
  </div>
  <div class="row justify-content-center">
    <img class="image" src="/assets/images/burgerimg.bmp" alt="burgerimage" width="300px" height:"300px">
  </div>

  <div class="row justify-content-center">
    <h2 class="header">Hungry? Let's eat some burgers!</h1>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-5">
      <h4 class="header">Burgers ready. Choose one to devour!</h4>

      <ul class="freshBurgers burgers">
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-sm-5">
      <h4 class="header">Burgers devoured</h4>

      <ul class="devouredBurgers burgers">
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-sm-10">
      <div class="container">
        <div class="row justify-content-center">
          <br>
          <br>
          <h3 class="header">First, order your burger</h3>
        </div>
      </div>

      <form class="create-form">
        <div class="form-group align-self-center">
          <label for="burgername" class="header label">What burger would you like to order?</label>
          <input type="text" id="bgname" name="name">
          <button type="submit" class="fnButton">Order this burger</button>
        </div>
      </form>
    </div>
  </div>
</div>